{
    "name": "coronachat-server",
    "version": "0.0.1",
    "description": "Secure Chat Server & Client Project for RMIT Capstone Project 1",
    "main": "src/index.js",
    "repository": "https://github.com/QPS-PP2050/CoronaChat-Server.git",
    "author": "QPS-PP2050",
    "license": "MIT",
    "scripts": {
        "build": "yarn tsc",
        "rebuild": "yarn clean && yarn build",
        "watch": "yarn tsc -w",
        "clean": "rm -r dist",
        "start": "node dist/index.js",
        "lint": "eslint --fix src --ext .ts",
        "test": "ts-mocha tests/index.ts --exit",
        "test:coverage": "nyc --reporter=lcov --reporter=text yarn test",
        "typeorm": "node -r module-alias/register -r dotenv-extended/config ./node_modules/typeorm/cli.js",
        "ssl": "mkdir ssl && openssl req -x509 -nodes -days 365 -subj '/CN=localhost' -newkey rsa:2048 -keyout ./ssl/dev.key -out ./ssl/dev.cert"
    },
    "dependencies": {
        "bcrypt": "^5.0.0",
        "class-transformer": "^0.3.1",
        "cors": "^2.8.5",
        "dotenv-extended": "^2.9.0",
        "express": "^4.17.1",
        "helmet": "^4.1.1",
        "jwt-simple": "^0.5.6",
        "mediasoup": "^3.6.24",
        "module-alias": "^2.2.2",
        "pg": "^8.3.3",
        "reflect-metadata": "^0.1.10",
        "socket.io": "^2.3.0",
        "typeorm": "0.2.25"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@skyra/eslint-config": "^5.3.0",
        "@types/bcrypt": "^3.0.0",
        "@types/chai": "^4.2.14",
        "@types/express": "^4.17.7",
        "@types/jwt-simple": "^0.5.33",
        "@types/mocha": "^8.0.3",
        "@types/node": "^8.0.29",
        "@types/node-fetch": "^2.5.7",
        "@types/socket.io": "^2.1.11",
        "@typescript-eslint/eslint-plugin": "^3.9.0",
        "@typescript-eslint/parser": "^3.9.0",
        "chai": "^4.2.0",
        "eslint": "^7.6.0",
        "mocha": "^8.1.3",
        "node-fetch": "^2.6.1",
        "nyc": "^15.1.0",
        "supertest-fetch": "^1.4.3",
        "ts-mocha": "^8.0.0",
        "typescript": "^4.0.2"
    },
    "_moduleAliases": {
        "@orm": "dist/orm/",
        "@https": "dist/https",
        "@utils": "dist/utils",
        "@ws": "dist/ws",
        "@api": "dist/api",
        "@root": "dist"
    }
}
