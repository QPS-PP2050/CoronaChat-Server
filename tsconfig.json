{
    "extends": "@skyra/eslint-config",
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "outDir": "dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "paths": {
            "@orm/*": [
                "orm/*"
            ],
            "@https/*": [
                "https/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@ws/*": [
                "ws/*"
            ],
            "@api/*": [
                "api/*"
            ],
            "@root/*": [
                "*"
            ]
        }
    },
    "include": [
        "src"
    ],
}